<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_retry"
        android:layout_gravity="center_horizontal"
        android:text="@string/err_json_loading_failed"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorTextSecondary"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageview_error"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/action_retry"
        android:layout_marginTop="@dimen/retry_btn_margin_top"
        android:layout_marginBottom="@dimen/retry_btn_margin_bottom"
        android:background="@android:color/white"
        />


    <ImageView
        android:id="@+id/imageview_error"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/error_image_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/error_screen_img"/>


</RelativeLayout>